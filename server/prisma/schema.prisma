generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Superhero {
  id                 Int       @id @default(autoincrement())
  nickname           String    @default("")
  real_name          String    @default("")
  origin_description String    @db.Text
  superpowers        String    @default("")
  catch_phrase       String    @default("")
  images             Image[]   @relation("SuperheroImages")
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

model Image {
  id                 Int       @id @default(autoincrement())
  url                String
  superheroId        Int?

  superhero          Superhero? @relation(fields: [superheroId], references: [id], name: "SuperheroImages", onDelete: Cascade)
}

